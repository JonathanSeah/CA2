<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Admin Dashboard</h1>
        <form method="GET" class="mb-3">
            <input type="text" name="search" placeholder="Search..." value="<%= searchTerm %>" class="form-control w-25 d-inline-block me-2">
            <button type="submit" class="btn btn-secondary">Search User...</button>
        </form>

        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>

        <table class="table table-hover mt-4">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u => { %>
                    <tr onclick="window.location.href='/user/<%= u.userID %>'" style="cursor:pointer;">
                        <td><%= u.userID %></td>
                        <td><%= u.username %></td>
                        <td><%= u.email_address %></td>
                        <td><%= u.phone_number %></td>
                        <td><%= u.age %></td>
                        <td><%= u.gender %></td>
                        <td><%= u.role %></td>
                        <td class="text-nowrap">
                            <a href="/updateUser/<%= u.userID %>" class="btn btn-sm btn-outline-primary me-1" onclick="event.stopPropagation()">Update</a>
                            <form action="/deleteUser/<%= u.userID %>" method="POST" class="d-inline" onclick="event.stopPropagation()">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>
    <hr class="my-5">
<h3>User Demographics</h3>
<div class="row">
  <div class="col-md-8 mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">Age distribution</h5>
        <canvas id="ageChart" height="160"></canvas>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">Gender</h5>
        <canvas id="genderChart" height="160"></canvas>
      </div>
    </div>
  </div>
</div>
<script>
(() => {
  const users = <%- JSON.stringify(users || []) %>;

  const ages = users.map(u => Number(u.age)).filter(n => Number.isFinite(n) && n >= 0);
  const buckets = [
    {label:'<18',  test:a=>a < 18},
    {label:'18–24', test:a=>a >= 18 && a <= 24},
    {label:'25–34', test:a=>a >= 25 && a <= 34},
    {label:'35–44', test:a=>a >= 35 && a <= 44},
    {label:'45–54', test:a=>a >= 45 && a <= 54},
    {label:'55–64', test:a=>a >= 55 && a <= 64},
    {label:'65+',   test:a=>a >= 65}
  ];
  const ageCounts = buckets.map(b => ages.reduce((acc,a)=>acc + (b.test(a)?1:0), 0));

  const gmap = new Map();
  users.forEach(u => {
    const g = (u.gender || '').toString().trim().toLowerCase();
    const norm = g.startsWith('m') ? 'Male'
               : g.startsWith('f') ? 'Female'
               : g ? g.charAt(0).toUpperCase()+g.slice(1)
               : 'Unspecified';
    gmap.set(norm, (gmap.get(norm)||0)+1);
  });
  const genderLabels = Array.from(gmap.keys());
  const genderCounts = Array.from(gmap.values());

  new Chart(document.getElementById('ageChart').getContext('2d'), {
    type: 'bar',
    data: {
      labels: buckets.map(b => b.label),
      datasets: [{ label: 'Users', data: ageCounts }]
    },
    options: {
      responsive: true,
      scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } },
      plugins: { legend: { display: false } }
    }
  });

  new Chart(document.getElementById('genderChart').getContext('2d'), {
    type: 'pie',
    data: { labels: genderLabels, datasets: [{ data: genderCounts }] },
    options: { responsive: true }
  });
})();
</script>
</body>
</html>
