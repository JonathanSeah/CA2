<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body, html{
            height: 200%;
            background-image: linear-gradient(orange, pink);
        }
        table {
          border: 1px solid black;
        }
        td {
          background-color: lightgray;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Admin Dashboard</h1>
        <a href="/logout" class="btn btn-danger">Logout</a>
        <form method="GET" class="mb-3">
            <input type="text" name="search" placeholder="Search..." value="<%= searchTerm %>" class="form-control w-25 d-inline-block me-2">
            <button type="submit" class="btn btn-secondary">Search User...</button>
        </form>

        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>

        <table class="table table-hover mt-4">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u => { %>
                    <tr onclick="window.location.href='/user/<%= u.userID %>'" style="cursor:pointer;">
                        <td><%= u.userID %></td>
                        <td><%= u.username %></td>
                        <td><%= u.email_address %></td>
                        <td><%= u.phone_number %></td>
                        <td><%= u.age %></td>
                        <td><%= u.gender %></td>
                        <td><%= u.role %></td>
                        <td class="text-nowrap">
                            <a href="/updateUser/<%= u.userID %>" class="btn btn-sm btn-outline-primary me-1" onclick="event.stopPropagation()">Update</a>
                            <form action="/deleteUser/<%= u.userID %>" method="POST" class="d-inline" onclick="event.stopPropagation()">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <hr class="my-5">
<h3>User Demographics</h3>
<div class="row">
  <div class="col-md-8 mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">Age distribution</h5>
        <canvas id="ageChart" height="160"></canvas>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">Gender</h5>
        <canvas id="genderChart" height="160"></canvas>
      </div>
    </div>
  </div>
</div>
<script>
(function () {
  const users = <%- JSON.stringify(users || []) %>;

  const ageLabels = ['<18','18–24','25–34','35–44','45–54','55–64','65+'];
  const ageCounts = Array(7).fill(0);
  const genderCounts = { Male:0, Female:0, Other:0, Unspecified:0 };

  for (const { age, gender } of users) {
    const a = Number(age);
    if (Number.isFinite(a) && a >= 0) {
      ageCounts[a < 18 ? 0 : a <= 24 ? 1 : a <= 34 ? 2 : a <= 44 ? 3 : a <= 54 ? 4 : a <= 64 ? 5 : 6]++;
    }
    const g = String(gender || '').trim().toLowerCase();
    if (!g) genderCounts.Unspecified++;
    else if (g[0] === 'm') genderCounts.Male++;
    else if (g[0] === 'f') genderCounts.Female++;
    else genderCounts.Other++;
  }

  const gLabels = Object.keys(genderCounts).filter(k => genderCounts[k] > 0);
  const gData = gLabels.map(k => genderCounts[k]);

  new Chart(document.getElementById('ageChart'), {
    type: 'bar',
    data: { labels: ageLabels, datasets: [{ data: ageCounts, label: 'Users' }] },
    options: { scales: { y: { beginAtZero: true } }, plugins: { legend: { display: false } } }
  });

  new Chart(document.getElementById('genderChart'), {
    type: 'pie',
    data: { labels: gLabels, datasets: [{ data: gData }] }
  });
})();
</script>
</body>
</html>
