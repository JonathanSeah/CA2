<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Register</h1>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/register" method="POST" class="mt-4">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter Username" required 
                <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
            </div>
            <div class="form-group">
                <label for="phone_number">Phone Number:</label>
                <input type="text" id="phone_number" name="phone_number" class="form-control" placeholder="Enter phone number" required 
                <% if (formData && formData.phone_number) { %> value="<%= formData.phone_number %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="email_address"> Email Address:</label>
                <input type="email" id="email_address" name="email_address" class="form-control" placeholder="Enter Email Address" required 
                <% if (formData && formData.email_address) { %> value="<%= formData.email_address %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="nric">NRIC:</label>
                <input type="text" id="nric" name="nric" class="form-control" placeholder="Enter NRIC" required 
                <% if (formData && formData.nric) { %> value="<%= formData.nric %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" id="age" name="age" class="form-control" placeholder="Enter Age" required 
                <% if (formData && formData.age) { %> value="<%= formData.age %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="gender">Gender: </label>
                <select id="gender" name="gender" class="form-control" required>
                    <option value="" disabled <% if (!formData || !formData.gender) { %> selected <% } %> hidden>Select Gender</option>
                    <option value="male" <% if (formData && formData.gender === 'male') { %> selected <% } %>>Male</option>
                    <option value="female" <% if (formData && formData.gender === 'female') { %> selected <% } %>>Female</option>
                </select>
                
            <div class="form-group">
                <label for="role">Role:</label>
                <select id="role" name="role" class="form-control" placeholder="Select Role" required>
                    <option value="" disabled <% if (!formData || !formData.role) { %> selected <% } %> hidden>Select Role</option>
                    <option value="user" <% if (formData && formData.role === 'user') { %> selected <% } %>>User</option>
                    <option value="admin" <% if (formData && formData.role === 'admin') { %> selected <% } %>>Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="/" class="btn btn-secondary mt-2">Go Back</a><br>
            <p class="mt-3">Already have an account? <a href="/login">Login here</a></p>
            <img src="/uploads/" alt="Fun animation" class="img-fluid">
        </form>
    </div>
</body>
</html>