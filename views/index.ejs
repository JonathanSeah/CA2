<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    body {
        background-color: lightblue; /* Light gray background */
    }  
    h1 {
        color: white; /* Dark blue text for the heading */
    }
</style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Welcome to our website</h1>
        <img src="/uploads/Uafl29NFAiIvGMQDPCCIrA.gif" alt="Fun animation" class="img-fluid">
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
            Hello , <%= user.username %>
            <br> <a href="/logout" class="btn btn-primary mt-3">Logout</a>
        <% } else { %>
        <a href="/register" class="btn btn-primary mt-3">Register</a>
        <a href="/login" class="btn btn-primary mt-3">Login</a>
        <% } %>
    </div>
</body>
</html>