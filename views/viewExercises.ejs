<!DOCTYPE html>
<html>
  <head>
    <title>Exercise Log</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="mb-4">Exercise Log</h2>
      <form method="GET" class="mb-3">
        <input type="text" name="search" placeholder="Search..." value="<%= searchTerm %>" class="form-control w-25 d-inline-block me-2">
        <button type="submit" class="btn btn-secondary">Search Exercise...</button>
      </form>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Reps</th>
            <th>Sets</th>
          </tr>
        </thead>
        <tbody>
          <% exercises.forEach(function(exercise) { %>
            <tr>
              <td><%= exercise.exercise_name %></td>
              <td><%= exercise.types %></td>
              <td><%= exercise.reps %></td>
              <td><%= exercise.sets %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <a href="/dashboard" class="btn btn-secondary mt-3">‚Üê Back to Dashboard</a>
    </div>
  </body>
</html>
