<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Exercise Log</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body, html {
        height: 100%;
        background-image: linear-gradient(orange, pink);
      }
    </style>
  </head>
  <body>
    <div class="container py-5">
      <h2 class="mb-4">Exercise Log</h2>
      <!-- Search form -->
      <form method="GET" class="mb-3">
        <input type="text" name="search" placeholder="Search..." value="<%= searchTerm %>" class="form-control w-25 d-inline-block me-2" />
        <button type="submit" class="btn btn-secondary">Search Exercise</button>
      </form>

      <!-- Exercise table -->
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Exercise Name</th>
            <th>Type</th>
            <th>Reps</th>
            <th>Sets</th>
            <th>Actions</th>
          </tr>
        </thead>
        
        <tbody>
          <% for (var i = 0; i < exercises.length; i++) { %>
            <tr>
              <td><%= exercises[i].exercise_name %></td>
              <td><%= exercises[i].types %></td>
              <td><%= exercises[i].reps %></td>
              <td><%= exercises[i].sets %></td>
              <td>
                <div class="d-flex gap-2">
                  <a href="/updateExercise/<%= exercises[i].exerciseID %>" class="btn btn-outline-primary">Update</a>
                  <form action="/deleteExercise/<%= exercises[i].exerciseID %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <!-- Navigation buttons -->
      <div class="d-flex gap-2 mb-3">
        <a href="/dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
        <a href="/addExercise" class="btn btn-success">+ Add Exercise</a>
      </div>
    </div>
  </body>
</html>
