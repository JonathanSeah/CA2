<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Update exercise</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container py-5">
      <!-- Left-aligned heading -->
      <h1 class="mb-4">Update Exercise</h1>

      <!-- Centered content starts here -->
      <div class="d-flex justify-content-center">
        <div class="w-100" style="max-width: 800px;">
          <% if (messages && messages.length) { %>
          <div class="alert alert-danger">
            <% messages.forEach(function(msg) { %>
              <p><%= msg %></p>
            <% }); %>
          </div>
          <% } %>

          <form
            action="/updateExercise/<%= exercise.exerciseID %>"
            method="POST"
            class="row g-3"
          >
            <div class="col-12">
              <label class="form-label">Exercise Name</label>
              <input
                type="text"
                name="exercise_name"
                class="form-control"
                maxlength="45"
                required
                value="<%= exercise.exercise_name %>"
              />
            </div>

            <div class="col-12">
              <label class="form-label">Types</label>
              <input
                type="text"
                name="types"
                class="form-control"
                required
                value="<%= exercise.types %>"
              />
            </div>

            <div class="col-12">
              <label class="form-label">Reps</label>
              <input
                type="number"
                name="reps"
                class="form-control"
                required
                value="<%= exercise.reps %>"
              />
            </div>

            <div class="col-12">
              <label class="form-label">Sets</label>
              <input
                type="number"
                name="sets"
                class="form-control"
                required
                value="<%= exercise.sets %>"
              />
            </div>
           
            <div class="col-12 text-center">
              <button class="btn btn-success">Save</button>
            </div>
          </form>
          <a href="/viewExercises" class="btn btn-secondary ms-2">Cancel</a>
        </div>
      </div>
    </div>
  </body>
</html>
