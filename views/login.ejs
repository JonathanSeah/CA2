<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        div{
            color: black;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        body, html {
            background-image: linear-gradient(orange, pink);
        }

    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Login Page</h1>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error %></p>
                <% }); %>
            </div>
        <% } %>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/login" method="POST" class="mt-4">
            <div class="form-group">
                <label for="username">UserName:</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter UserName" required>
            </div>
            <div class="form-group">
                <label for="email_address">Email:</label>
                <input type="email" id="email_address" name="email_address" class="form-control" placeholder="Enter Email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Login</button>
            <a href="/" class="btn btn-secondary mt-3">Go Back</a><br>
            <p class="mt-3">Don't have an account? <a href="/register">Register here</a></p>
            <img src="/uploads/login.webp" alt="Fun animation" class="img-fluid">
        </form>
    </div>
</body>
</html>